.modal.fade#alert-dialog
  .modal-dialog
    .modal-content
      form
        .modal-header
          button.close(type='button', data-dismiss='modal', aria-label='Close')
            span(aria-hidden='true') &times;
          h4.modal-title
            span.fa.fa-exclamation-triangle
            |  
            span#alert-title
        .modal-body
          p#alert-body
        .modal-footer
          .row
            .col-xs-3
            .col-xs-6
              button.btn.btn-warning.btn-block(type='button', data-dismiss='modal' autofocus) OK
            .col-xs-3
